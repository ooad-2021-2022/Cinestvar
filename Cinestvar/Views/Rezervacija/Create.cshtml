@model Cinestvar.Models.Termin

@{
    ViewData["Title"] = "Potvrda";
}

<h1>Potvrda rezervacije</h1>

<h4>  Vaša rezervacija je skoro gotova!</h4>
<hr />
<div class="row">
    <center>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <h3 style="text-align: justify; text-justify: inter-word; font-weight:normal">
                <br />
                <li>Naziv filma: @Html.DisplayFor(model=>model.Film.NazivFilma)</li>
                <li>Termin: @Html.DisplayFor(model=>model.PocetakTermina)</li>
                <li>Sala: @Html.DisplayFor(model=>model.IdSale)</li>
                <br />
                </h3>
            </div>
            <div class="form-group">
                
            </div>
            <div class="form-group">
                <a asp-action="PotvrdiPravno" asp-route-id=@Model.IdTermina  class="btn btn-warning" style="margin:10px">Potvrdi</a> 
                <a asp-controller="Film" asp-action="Index" class="btn btn-secondary" style="margin:10px">Odustani</a>
            </div>
        </form>
    </div>
    </center>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
