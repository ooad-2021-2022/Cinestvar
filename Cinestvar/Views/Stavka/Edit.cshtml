@model Cinestvar.Models.Stavka

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Stavka</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdStavke" />
            <div class="form-group">
                <label asp-for="NazivStavke" class="control-label"></label>
                <input asp-for="NazivStavke" class="form-control" />
                <span asp-validation-for="NazivStavke" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpisStavke" class="control-label"></label>
                <input asp-for="OpisStavke" class="form-control" />
                <span asp-validation-for="OpisStavke" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipStavke" class="control-label"></label>
                <select asp-for="TipStavke" class="form-control" asp-items="Html.GetEnumSelectList<TipStavke>()"></select>
                <span asp-validation-for="TipStavke" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
